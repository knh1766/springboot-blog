{{> /layout/header}}

<div class="container p-5">
  <!--요청을 하면 localhost:8080/join post로 요청됨
  username=사용자입력값@password= 사용자값&eamil=사용자입력값 -->

  <form
    action="/login"
    method="post"
    enctype="application/x-www-form-urlencoded"
  >
    <div class="mb-3 mt-3">
      <input
        type="text"
        class="form-control"
        placeholder="Enter username"
        name="username"
      />
    </div>
    <div class="mb-3">
      <input
        type="password"
        class="form-control"
        placeholder="Enter password"
        name="password"
      />
    </div>

    <button type="submit" class="btn btn-primary">로그인</button>
  </form>
</div>

{{> /layout/footer}}
